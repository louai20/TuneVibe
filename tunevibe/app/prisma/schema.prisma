datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String
  hashedPassword String?
}


model Playlist {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  image        String?
  uri          String @unique
  addedBy      String
}
